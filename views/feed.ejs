<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.6.0/fonts/remixicon.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    <style>
        @font-face {
            font-family: 'Kajiro';
            src: url('/fonts/Kajiro.woff2') format('woff2');
        }

        body,
        html {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
            height: 100%;
            width: 100%;
        }

        .container {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .drawer {
            width: 0;
            max-width: 300px;
            height: 100%;
            background-color: #000000;
            color: white;
            transition: width 0.3s ease;
            overflow: hidden;
            position: fixed;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .drawer.open {
            width: 30%;
        }

        .profile {
            display: flex;
            /* text-align: center; */
            /* padding: 20px; */
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .profile-picture {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 10px;
        }

        .profile-name {
            font-size: 1.2em;
            font-weight: bold;
        }

        .drawer-menu {
            list-style: none;
            padding: 0;
        }

        .drawer-menu li {
            padding: 15px 20px;
            cursor: pointer;
            border-top: 1px solid #ffffff;
            transition: background 0.3s;
            display: flex;
            align-items: center;
        }

        .drawer-menu li:hover {
            background-color: #34495e;
        }

        .drawer-menu li i {
            margin-right: 10px;
        }

        .close-icon {
            font-size: 1.5em;
            cursor: pointer;
            position: absolute;
            top: 10px;
            right: 20px;
        }

        .chat-container {
            flex: 1;
            transition: margin-left 0.3s ease;
            width: 100%;
            display: flex;
            flex-direction: column;
        }

        .chat-container.open {
            margin-left: 20%;
        }

        .header {
            background-color: #2e3336;
            color: white;
            padding: 15px;
            font-size: 1.2em;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .menu-icon {
            font-size: 1.5em;
            cursor: pointer;
        }

        .chat-box {
            padding: 00px;
            height: calc(100% - 60px);
            overflow-y: auto;
            flex: 1;
        }

        .drawer-footer {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .drawer-footer li {
            border-top: 1px solid #34495e;
            transition: background 0.3s;
            display: flex;
            align-items: center;
            padding: 15px 20px;
            cursor: pointer;
        }

        .drawer-footer li:hover {
            background-color: #34495e;
        }

        .drawer-footer li i {
            margin-right: 10px;
        }


        /* Responsive Design */
        @media (max-width: 768px) {
            .drawer.open {
                width: 70%;
            }

            .chat-container.open {
                margin-left: 70%;
            }

            .drawer-footer {
                width: 70%;
            }
        }

        .navv {
            display: flex;
            justify-content: space-between;
            align-items: center;
            min-height: 10vh;
            padding: 10px;
            background-color: #f0f0f0;
            border-bottom: 1px solid #ddd;
        }

        .phonescreen {
            height: 90vh;
            width: 60vh;
            background-color: red;
        }

        .user-page {
            height: 100vh;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            background-size: cover;
            background-position: center;
            position: relative;
            padding: 20px;
        }

        .user-card {
            width: 100%;
            /* background-color: rgba(255, 255, 255, 0.9); */
            border-radius: 10px;
            padding: 20px;
            text-align: left;
            /* box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); */
        }

       

        .add-friend-button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            position: absolute;
            top: 20px;
            right: 20px;
            transition: background-color 0.3s;
        }

        .add-friend-button:hover {
            background-color: #0056b3;
        }
        .add-friend-buttonss {
            padding: 10px 20px;
            background-color: #969a9e;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            position: absolute;
            top: 20px;
            right: 20px;
            transition: background-color 0.3s;
        }
        .add-friend-button:hover {
            background-color: #495057;
        }

        .user-details {
            position: absolute;
            bottom: 20px;
            left: 20px;
        }

        .user-name {
            font-family: 'Kajiro';
            color: white;
            font-weight: 100;
            font-size: 20vh;
            line-height: 197px;
        }

        .user-age {
            font-size: 18px;
            color: #666;
            margin-bottom: 5px;
        }

        .profession {
            color: #ffffff;
            font-size: 32px;
            margin-bottom: 5px;
            border: solid;
        }

        .bio {
            font-family: ui-rounded;
            font-size: 32px;
            display: grid;
            place-items: center;
            /* columns: auto; */
            color: #9fff00;
            text-transform: uppercase;
        }
        .anchored {
            padding: 10px 20px;
            background-color: #000000;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            position: absolute;
            top: 20px;
            right: 20px;
            transition: background-color 0.3s;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="drawer" id="drawer">
            <span class="close-icon" id="close-icon">&times;</span>
            <div>
                <div class="profile">
                    <img src="/images/uploads/<%=manxe.profilePicture%>" alt="Profile Picture" class="profile-picture">
                    <div class="profile-name">
                        <%=manxe.fullName%>
                    </div>
                </div>
                <ul class="drawer-menu" id="drawer-menu">
                    <a href="/profile">
                        <li><i class="fa-solid fa-user"></i>Profile</li>
                    </a>
                    <a href="/feed">
                        <li><i class=" feed fas fa-home"></i>Feed</li>
                    </a>
                    <a href="/messages">
                        <li><i class="fas fa-envelope"></i>Messages</li>
                    </a>
                    <a href="/requests">
                        <li><i class="fas fa-user-friends"></i>Requests</li>
                    </a>
                    <a href="/friends">
                        <li><i class="fas fa-users"></i>Friends</li>
                    </a>
                    <a href="/notifications">
                        <li><i class="fas fa-bell"></i>Notifications</li>
                    </a>
                </ul>


            </div>
            <ul class="drawer-footer">
                <a>
                    <li><i class="fas fa-cog"></i>Settings</li>
                </a>
                <a href="/logout">
                    <li><i class="fas fa-sign-out-alt"></i>Logout</li>
                </a>


            </ul>
        </div>
        <div class="chat-container" id="chat-container">
            <!-- <div class="header">
        <span class="menu-icon" id="menu-icon">&#9776;

        </span>
        <span class="maya">आफ्नो माया पाउनु भयो त?</span>
      </div> -->
            <div class="chat-box" id="chat-box" style="background-color:rgb(255, 255, 255);">
                <!-- Chat content goes here -->
                <div class="mainmanxe">
                    <div class="navv">
                        <div class="name">
                            <%=manxe.fullName%>
                        </div>
                        <div class="name">
                            People You May Love!!
                        </div>
                        <i class="text-[1.4rem] ri-menu-line menu-icon" id="menu-icon"></i>

                    </div>

                    <% users.forEach(function(user) { %>
                       <% if(user.verified){

                        %>
                        <% if(user.carouselPicture){


                            %>
                            
                            <div class="user-page"
                            style="background-image: url('/images/uploads/<%= user.carouselPicture %>');">
                            <img class="profile-picture" src="/images/uploads/<%= user.profilePicture %>"
                                alt="Profile Picture">
                                <% if (!user.matched.some(match => match._id.equals(manxe._id))) { %>
                                    <button class="anchor add-friend-button" data="<%= user._id %>">Add Friend</button>
                                  <% } else { %>
                                    <button class=" add-friend-buttonss" data="<%= user._id %>">Matched</button>
                                  <% } %>
                            
                            <div class="user-card">
                                <div class="user-details">
                                    <h1 class="user-name" style=" font-family: 'Kajiro';
                                    color: white;
                                    font-weight: 100;
                                    font-size: 20vh;
                                    line-height: 197px;
                                    ">
                                        <%= user.fullName %> <span style="    color: #e600ff;">
                                                <%= user.age %>
                                            </span>
                                    </h1>

                                    <p class="profession">
                                        <%= user.jobTitle %>
                                    </p>
                                    <p class="bio">
                                        <%= user.bio %>
                                    </p>
                                </div>
                            </div>
                        </div>
                            
                            
                            <%
                        }%>
                         
                        
                        <%
                       }%> 
                       
                        <% }); %>







                </div>
            </div>

        </div>
    </div>
    </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const menuIcon = document.getElementById('menu-icon');
            const closeIcon = document.getElementById('close-icon');
            const drawer = document.getElementById('drawer');
            const chatContainer = document.getElementById('chat-container');
            const drawerMenuItems = document.querySelectorAll('#drawer-menu li');
            const drawerFooterItems = document.querySelectorAll('.drawer-footer li');

            menuIcon.addEventListener('click', function () {
                drawer.classList.toggle('open');
                chatContainer.classList.toggle('open');
            });

            closeIcon.addEventListener('click', function () {
                drawer.classList.remove('open');
                chatContainer.classList.remove('open');
            });

            drawerMenuItems.forEach(item => {
                item.addEventListener('click', function () {
                    drawer.classList.remove('open');
                    chatContainer.classList.remove('open');
                });
            });

            drawerFooterItems.forEach(item => {
                item.addEventListener('click', function () {
                    drawer.classList.remove('open');
                    chatContainer.classList.remove('open');
                });
            });
        });

        document.querySelectorAll('.anchor').forEach(function (element) {
            element.addEventListener('click', function (e) {
                e.preventDefault();
                const value = e.target.getAttribute('data');
                fetch('/addFriend', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        id: value
                    })
                })
                    .then(response => {
                        if (response.ok) {
                            return response.json(); // Parse JSON response
                        } else {
                            throw new Error('Failed to send friend request');
                        }
                    })
                    .then(data => {
                        // Access the full name from the response data
                        console.log(data.fullName); // Assuming fullName is a property of the JSON response
                        alert(`Friend request sent to ${data.fullName}`);
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            });
        });

    </script>
</body>

</html>