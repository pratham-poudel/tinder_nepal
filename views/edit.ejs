<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
    <div class="flex justify-between items-center px-4">
      <a class="text-sm text-blue-500" href="/profile"><i class="ri-arrow-left-s-line"></i> profile</a>
      <h2 class="leading-none text-sm">Edit Profile</h2>
      <a class="text-sm" href="/profile"><i class="ri-home-line"></i> home</a>
    </div>
    <div class="flex flex-col items-center gap-2 mt-20">
      <div class="image w-20 h-20 bg-sky-100 rounded-full">
      
      </div>
      <button id="btnn" class="bg-blue-500 text-white px-4 py-2 rounded-md shadow-md">Edit Profile Picture</button>
      <button id="btnnn" class="bg-blue-500 text-white px-4 py-2 rounded-md shadow-md" >Edit Carousel Picture</button>
    </div>
    <div class="gap-5 px-4 mt-10">
      <h3 class="text-lg leading-none">Edit Account Details</h3>
      <hr class="opacity-30 my-3">
      <form class="w-full" action="/update" method="post" enctype="multipart/form-data">
        <input type="file" hidden id="photu" name="profilePicture">
        <input type="file" hidden id="photu1" name="carouselPicture">
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900" type="text" placeholder="username" name="username" value="<%=user.username%>" required>
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900" type="text" placeholder="Full Name" name="name" value="<%=user.fullName%>" required>
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900" type="text" placeholder="Job Title" name="jobTitle" required value="<%=user.jobTitle%>">
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900" type="text" placeholder="Age" name="age" required value="<%=user.age%>" >
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900 resize-none" placeholder="Bio" name="bio"required value="<%=user.bio%>"></input>
        <input class="w-full bg-blue-500 px-3 py-3 rounded-md mt-2" type="submit" value="Update Details"required>
      </form>
    </div>
  </div>


<script>
  document.querySelector("#btnn").addEventListener("click",function(){
    document.querySelector("#photu").click();
  })
  document.querySelector("#btnnn").addEventListener("click",function(){
    document.querySelector("#photu1").click();
  })
</script>